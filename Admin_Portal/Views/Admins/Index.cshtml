@model IEnumerable<Admin_Portal.Data.Admin>

@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    .background {
        background-color: lightblue;
    }

    .white {
        background-color: white;
    }

    .top {
        background-color: antiquewhite;
    }
</style>

    <h2>Admins</h2>



    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>

    <p>

        @using (Html.BeginForm("Search", "Admins", FormMethod.Get))
        {
        <p>
            @Html.DropDownList("searchtype", new SelectList(new[] { "Email","Admin Type" }))
            @Html.DropDownList("searchop", new SelectList(new[] { "Starts With", "Contains", "Ends With" })):
            @Html.TextBox("searchtxt")
            <input type="submit" value="Filter" />
        </p>
        }
    </p>

        <table class="table">
            <tr class="top">
                <th>
                    @Html.DisplayName("Email Address")
                </th>
                <th>
                    @Html.DisplayName("Admin_Type")
                </th>
                <th>
                    @Html.DisplayName("Edit")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="white">
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Admin_Type)
                    </th>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.AdminID }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>

        @if (ViewBag.FromSearch)
        {
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        }